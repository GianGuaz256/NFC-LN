# LNbits Configuration
LNBITS_URL=https://your-lnbits-instance.com
LNBITS_API_KEY=your-admin-api-key-here
LNBITS_WALLET_ID=your-wallet-id-here

# NFC Configuration
NFC_INTERFACE=i2c
NFC_I2C_BUS=1
# For SPI, uncomment and configure:
# NFC_INTERFACE=spi
# NFC_SPI_BUS=0
# NFC_SPI_DEVICE=0

# Application Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ln-nfc.log

# Security (optional)
# ADMIN_PIN=1234

# Tag Configuration (defaults)
DEFAULT_TAG_USES=1
DEFAULT_TAG_TITLE=Lightning Gift Card
LNURL_USE_BECH32=true
